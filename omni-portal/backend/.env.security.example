# Security Configuration
# Copy these settings to your .env file and adjust as needed

# Session Security
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=strict
SESSION_LIFETIME=60
SESSION_FINGERPRINTING=true
SESSION_ROTATE_SENSITIVE=true
MAX_FAILED_ATTEMPTS=5
LOCKOUT_DURATION=30
SESSION_INACTIVE_TIMEOUT=60
SESSION_VALIDATE_IP=true
SESSION_VALIDATE_USER_AGENT=true

# CSRF Protection
CSRF_ENHANCED_PROTECTION=true
CSRF_DOUBLE_SUBMIT_COOKIE=true
CSRF_VALIDATE_ORIGIN=true
CSRF_VALIDATE_REFERER=true
CSRF_OPERATION_TOKENS=true
CSRF_RATE_LIMIT=10

# SQL Injection Protection
SQL_INJECTION_PROTECTION=true
SQL_BLOCK_HIGH_RISK=true
SQL_LOG_SUSPICIOUS=true
SQL_PROTECTION_RATE_LIMIT=50
SQL_AUTO_BLOCK_IPS=true
SQL_BLOCK_THRESHOLD=3
SQL_BLOCK_DURATION=60

# Database Query Monitoring
QUERY_MONITORING=true
QUERY_LOG_DANGEROUS=true
QUERY_LOG_SUSPICIOUS=true
QUERY_MAX_EXECUTION_TIME=5000
QUERY_MAX_JOINS=5
QUERY_MAX_SUBQUERIES=3

# Input Validation
INPUT_ENHANCED_VALIDATION=true
INPUT_MAX_TEXT_LENGTH=1000
INPUT_MAX_TEXTAREA_LENGTH=5000

# Security Headers
SECURITY_FRAME_OPTIONS=DENY
SECURITY_CONTENT_TYPE_OPTIONS=nosniff
SECURITY_XSS_PROTECTION="1; mode=block"
SECURITY_REFERRER_POLICY=strict-origin-when-cross-origin
SECURITY_HSTS="max-age=31536000; includeSubDomains; preload"

# Rate Limiting
RATE_LIMIT_API=60
RATE_LIMIT_LOGIN=5
RATE_LIMIT_PASSWORD_RESET=3
RATE_LIMIT_REGISTRATION=3
RATE_LIMIT_UPLOAD=10

# IP Blocking
IP_BLOCKING_ENABLED=true
IP_WHITELIST=127.0.0.1,::1
IP_MAX_VIOLATIONS=10
IP_BLOCK_DURATION=60

# Logging and Monitoring
LOG_SECURITY_EVENTS=true
LOG_FAILED_AUTH=true
LOG_SUSPICIOUS_ACTIVITY=true
SECURITY_SEND_ALERTS=false
SECURITY_ALERT_EMAILS=admin@example.com