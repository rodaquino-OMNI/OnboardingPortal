APP_NAME="Omni Portal Testing"
APP_ENV=testing
APP_KEY=base64:YOUR_TEST_APP_KEY_HERE
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Testing Database Configuration
DB_CONNECTION=sqlite
DB_DATABASE=:memory:
# Alternative: Use file-based SQLite for debugging
# DB_DATABASE=database/testing.sqlite

BROADCAST_DRIVER=log
CACHE_DRIVER=array
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=array
SESSION_LIFETIME=120

# Disable external services in testing
MAIL_MAILER=array
MAIL_HOST=localhost
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="test@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Redis (use array driver for testing)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# AWS Services (disabled for testing)
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=test-bucket

# OCR Service Configuration (testing mode)
OCR_SERVICE=tesseract
TEXTRACT_ENABLED=false
TESSERACT_ENABLED=true

# Gamification (enabled for testing)
GAMIFICATION_ENABLED=true

# Testing URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Test User Credentials
TEST_ADMIN_EMAIL=admin@example.com
TEST_ADMIN_PASSWORD=password123
TEST_DEMO_EMAIL=demo@example.com
TEST_DEMO_PASSWORD=demo123