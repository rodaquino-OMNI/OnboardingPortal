# Security Configuration for OnboardingPortal
# Copy these settings to your .env file and adjust values for your environment

# CRITICAL: Metrics Endpoint Security
METRICS_REQUIRE_AUTH=true
METRICS_REQUIRE_ADMIN=true
METRICS_RATE_LIMIT=5
METRICS_LOG_ACCESS=true
# PRODUCTION ONLY: Comma-separated list of allowed IPs for metrics access
# METRICS_ALLOWED_IPS="10.0.0.1,192.168.1.100,127.0.0.1"

# Authentication Cookie Security
AUTH_COOKIE_SECURE=true
AUTH_COOKIE_HTTPONLY=true
AUTH_COOKIE_SAMESITE=Strict
AUTH_COOKIE_EXPIRATION=525600

# Health Questionnaire Security
HEALTH_REQUIRE_EMAIL_VERIFICATION=true
HEALTH_MAX_RESPONSES=500
HEALTH_MAX_RESPONSE_LENGTH=2000

# CORS Security
FRONTEND_URL=https://your-domain.com
SANCTUM_STATEFUL_DOMAINS=your-domain.com

# Session Security
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE_COOKIE=strict

# Production Security Headers
APP_ENV=production
APP_DEBUG=false