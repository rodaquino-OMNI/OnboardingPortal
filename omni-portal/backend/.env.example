# Application Configuration
APP_NAME="Omni Portal"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com

# Database Configuration - REQUIRED: Set these values in production
# Main Database Connection
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=omni_portal
DB_USERNAME=omni_user
DB_PASSWORD=

# High Availability Database Configuration
# Read Database (Slave) Configuration
DB_READ_HOST_1=127.0.0.1:3307
DB_READ_HOST_2=127.0.0.1:3308
DB_READ_PORT=3306
DB_READ_USERNAME=omni_reader
DB_READ_PASSWORD=

# Write Database (Master) Configuration
DB_WRITE_HOST=127.0.0.1
DB_WRITE_PORT=3306
DB_WRITE_USERNAME=omni_user
DB_WRITE_PASSWORD=

# Master Database Connection
DB_MASTER_HOST=127.0.0.1
DB_MASTER_PORT=3306
DB_MASTER_USERNAME=omni_user
DB_MASTER_PASSWORD=

# Slave Database Connections
DB_SLAVE1_HOST=127.0.0.1
DB_SLAVE1_PORT=3307
DB_SLAVE2_HOST=127.0.0.1
DB_SLAVE2_PORT=3308
DB_SLAVE_USERNAME=omni_reader
DB_SLAVE_PASSWORD=

# ProxySQL Configuration (recommended for production)
PROXYSQL_HOST=127.0.0.1
PROXYSQL_PORT=6033

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_SESSION_DB=3
REDIS_HORIZON_DB=2

# Redis High Availability (Sentinel)
REDIS_SENTINEL_ENABLED=false
REDIS_SENTINEL_MASTER=mymaster
REDIS_SENTINEL_HOST_1=127.0.0.1
REDIS_SENTINEL_PORT_1=26379
REDIS_SENTINEL_HOST_2=127.0.0.1
REDIS_SENTINEL_PORT_2=26380
REDIS_SENTINEL_HOST_3=127.0.0.1
REDIS_SENTINEL_PORT_3=26381

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

# JWT Configuration
JWT_SECRET=

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PREFIX=sess:

# Cache Configuration
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis

# Horizon Configuration
HORIZON_PREFIX=horizon:

# Security Configuration
BCRYPT_ROUNDS=12

# SSL/TLS Configuration
MYSQL_ATTR_SSL_CA=

# Performance Configuration
REDIS_PERSISTENT=true
REDIS_CONNECTION_TIMEOUT=5.0
REDIS_READ_TIMEOUT=5.0
REDIS_POOL_SIZE=10
REDIS_MAX_CONNECTIONS=50
REDIS_MIN_CONNECTIONS=5

# Logging Configuration
LOG_CHANNEL=daily
LOG_LEVEL=info
LOG_DEPRECATIONS_CHANNEL=null
LOG_STACK=single

# Broadcasting Configuration
BROADCAST_DRIVER=log
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Vite Configuration
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"