# Omni Portal Environment Configuration
# Copy this file to .env and fill in the appropriate values
# DO NOT commit .env files to version control

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application environment (development, staging, production)
NODE_ENV=

# Application port
PORT=

# Application URL (for callbacks, redirects, etc.)
APP_URL=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database connection settings
DB_HOST=
DB_PORT=
DB_NAME=
DB_USER=

# Database passwords are managed via Docker secrets
# Do not set DB_PASSWORD or DB_ROOT_PASSWORD here

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis connection settings
REDIS_HOST=
REDIS_PORT=

# Redis password is managed via Docker secrets
# Do not set REDIS_PASSWORD here

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT configuration
JWT_EXPIRES_IN=

# Session configuration
SESSION_MAX_AGE=
COOKIE_SECURE=
COOKIE_SAME_SITE=

# Security headers
HELMET_ENABLED=
CORS_ORIGIN=

# Rate limiting
RATE_LIMIT_WINDOW_MS=
RATE_LIMIT_MAX_REQUESTS=

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# OpenAI API configuration
OPENAI_MODEL=
OPENAI_MAX_TOKENS=
OPENAI_TEMPERATURE=

# Email/SMTP configuration (if used)
SMTP_HOST=
SMTP_PORT=
SMTP_SECURE=
SMTP_FROM_EMAIL=
SMTP_FROM_NAME=

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Logging configuration
LOG_LEVEL=
LOG_FORMAT=
LOG_FILE_ENABLED=
LOG_FILE_PATH=

# Monitoring
HEALTH_CHECK_ENABLED=
METRICS_ENABLED=

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development mode settings
DEBUG=
MOCK_EXTERNAL_SERVICES=
HOT_RELOAD=

# =============================================================================
# DOCKER SETTINGS
# =============================================================================

# Docker network settings
DOCKER_NETWORK_SUBNET=

# Volume mount paths (for development)
HOST_DATA_PATH=
HOST_LOGS_PATH=

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================

# Backup configuration
BACKUP_ENABLED=
BACKUP_SCHEDULE=
BACKUP_RETENTION_DAYS=

# Maintenance mode
MAINTENANCE_MODE=
MAINTENANCE_MESSAGE=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature toggles
FEATURE_USER_REGISTRATION=
FEATURE_SOCIAL_LOGIN=
FEATURE_EMAIL_VERIFICATION=
FEATURE_TWO_FACTOR_AUTH=
FEATURE_ANALYTICS=

# =============================================================================
# NOTES
# =============================================================================
# 
# SENSITIVE VALUES (managed via Docker secrets):
# - Database passwords (root and user)
# - Redis password
# - JWT secret key
# - Session secret key
# - OpenAI API key
# - Encryption keys
# - SMTP password
# 
# These values should NEVER be set in environment files.
# Use the Docker secrets management system instead.
# 
# To initialize secrets, run: ./scripts/init-secrets.sh
# 
# =============================================================================