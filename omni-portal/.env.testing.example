# Testing Environment Configuration Template
# Copy this file to .env.testing for running tests

# Application Settings
APP_NAME="Omni Portal (Testing)"
APP_ENV=testing
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Test Database Configuration
DB_CONNECTION=sqlite
DB_DATABASE=:memory:
DB_FOREIGN_KEYS=true

# Cache & Session for Testing
CACHE_DRIVER=array
QUEUE_CONNECTION=sync
SESSION_DRIVER=array
BROADCAST_DRIVER=log

# Disable External Services in Tests
MAIL_MAILER=array
FILESYSTEM_DISK=local

# Laravel Sanctum Testing
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:3000,::1

# Security for Testing
SESSION_ENCRYPT=false
SESSION_FINGERPRINTING=false

# API URLs for Testing
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_PUSHER_APP_KEY=test-key
NEXT_PUBLIC_PUSHER_HOST=localhost
NEXT_PUBLIC_PUSHER_PORT=8080
NEXT_PUBLIC_PUSHER_SCHEME=http

# Logging
LOG_CHANNEL=single
LOG_LEVEL=debug

# Rate Limiting for Tests (more lenient)
THROTTLE_REQUESTS_PER_MINUTE=1000
API_RATE_LIMIT=1000

# Disable External APIs in Tests
SENTRY_LARAVEL_DSN=
GOOGLE_ANALYTICS_ID=

# Test Performance Settings
HEALTH_CHECK_ENABLED=false
HEALTH_CHECK_MEMORY_LIMIT=512