# OnboardingPortal Docker Environment Configuration
# Copy this file to .env before running docker-compose up

# Application
APP_NAME="OnboardingPortal"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost

# Laravel Key (generate with: php artisan key:generate)
APP_KEY=

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=onboarding_portal
DB_USERNAME=onboarding_user
DB_PASSWORD=secret_pass
DB_ROOT_PASSWORD=secret_root_pass

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache Configuration
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Mail Configuration (configure for production)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@onboarding-portal.local"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (for production S3 storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher (for real-time features)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

# Port Configuration
FRONTEND_PORT=3000
BACKEND_PORT=8000
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Node Environment
NODE_ENV=development

# Next.js Public Variables
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_DEPLOYMENT_STAGE=docker
NEXT_PUBLIC_REGISTRATION_ENABLED=true
NEXT_PUBLIC_REGISTRATION_ROLLOUT_PERCENTAGE=100
NEXT_PUBLIC_HEALTH_MODULE_ENABLED=true
NEXT_PUBLIC_DEBUG=true

# HIPAA/LGPD Compliance
AUDIT_LOG_RETENTION_DAYS=2555
PHI_ENCRYPTION_KEY=
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Feature Flags
FEATURE_HEALTH_QUESTIONNAIRE=true
FEATURE_GAMIFICATION=true
FEATURE_VIDEO_CHAT=false
FEATURE_DOCUMENT_UPLOAD=true

# Sanctum (API Authentication)
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:3000
