# OnboardingPortal Environment Configuration
# Copy this file to .env and configure with your actual values

APP_NAME="Omni Portal"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration (REQUIRED - No defaults for security)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=omni_portal
DB_USERNAME=your_username_here
DB_PASSWORD=your_password_here

# High Availability Database Configuration (Optional)
DB_READ_HOST_1=127.0.0.1:3307
DB_READ_HOST_2=127.0.0.1:3308
DB_READ_PORT=3306
DB_READ_USERNAME=your_read_username
DB_READ_PASSWORD=your_read_password

DB_WRITE_HOST=127.0.0.1
DB_WRITE_PORT=3306
DB_WRITE_USERNAME=your_write_username
DB_WRITE_PASSWORD=your_write_password

# ProxySQL Configuration (Production)
PROXYSQL_HOST=127.0.0.1
PROXYSQL_PORT=6033

# Master Database (Admin/Maintenance)
DB_MASTER_HOST=127.0.0.1
DB_MASTER_PORT=3306
DB_MASTER_USERNAME=your_master_username
DB_MASTER_PASSWORD=your_master_password

# Slave Databases (Read Replicas)
DB_SLAVE1_HOST=127.0.0.1
DB_SLAVE1_PORT=3307
DB_SLAVE2_HOST=127.0.0.1
DB_SLAVE2_PORT=3308
DB_SLAVE_USERNAME=your_slave_username
DB_SLAVE_PASSWORD=your_slave_password

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CLIENT=phpredis

# Cache Configuration
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Services (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher Configuration (Optional)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Application Settings
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Security Settings
SESSION_SECURE_COOKIE=false
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000,::1

# Performance Settings
DB_POOL_SIZE=10
REDIS_POOL_SIZE=10
REDIS_CONNECTION_TIMEOUT=5.0
REDIS_READ_TIMEOUT=5.0

# Monitoring (Optional)
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# Feature Flags
ENABLE_REDIS_SENTINEL=false
ENABLE_QUERY_LOGGING=false
ENABLE_SLOW_QUERY_LOG=true
SLOW_QUERY_THRESHOLD=100