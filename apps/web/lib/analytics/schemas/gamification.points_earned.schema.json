{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "gamification.points_earned",
  "title": "Gamification Points Earned Event Schema",
  "description": "Schema for tracking when users earn points in the gamification system",
  "allOf": [
    {
      "$ref": "base-event.schema.json"
    }
  ],
  "properties": {
    "event": {
      "const": "gamification.points_earned"
    },
    "user_id": {
      "type": "string",
      "pattern": "^hash_[a-f0-9]{64}$",
      "description": "Required for gamification events"
    },
    "properties": {
      "type": "object",
      "required": [
        "action_type",
        "points_amount",
        "points_total_after"
      ],
      "properties": {
        "action_type": {
          "type": "string",
          "enum": [
            "registration_completed",
            "email_verified",
            "profile_completed",
            "health_questionnaire_completed",
            "document_uploaded",
            "document_approved",
            "interview_scheduled",
            "interview_attended",
            "streak_maintained",
            "bonus_achievement"
          ],
          "description": "Type of action that earned points"
        },
        "points_amount": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10000,
          "description": "Number of points earned for this action"
        },
        "points_total_after": {
          "type": "integer",
          "minimum": 0,
          "description": "Total points after this event"
        },
        "bonus_type": {
          "type": ["string", "null"],
          "enum": [null, "streak_bonus", "weekend_bonus", "first_time_bonus", "level_bonus"],
          "description": "Type of bonus applied, if any"
        },
        "related_entity_type": {
          "type": ["string", "null"],
          "enum": [null, "document", "questionnaire", "interview", "achievement"],
          "description": "Type of entity related to this point earning"
        },
        "related_entity_id": {
          "type": ["integer", "null"],
          "minimum": 1,
          "description": "ID of the related entity (anonymized if necessary)"
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "schema_version",
    "event",
    "timestamp",
    "user_id",
    "platform",
    "properties",
    "context"
  ]
}