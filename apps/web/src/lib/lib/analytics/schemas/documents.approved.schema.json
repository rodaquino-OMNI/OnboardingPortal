{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "documents.approved",
  "title": "Documents Approved Event Schema",
  "description": "Schema for tracking when documents are approved by administrators",
  "allOf": [
    {
      "$ref": "base-event.schema.json"
    }
  ],
  "properties": {
    "event": {
      "const": "documents.approved"
    },
    "user_id": {
      "type": "string",
      "pattern": "^hash_[a-f0-9]{64}$",
      "description": "Required for document events"
    },
    "properties": {
      "type": "object",
      "required": [
        "document_id",
        "document_type",
        "approved_by",
        "time_to_approval_hours",
        "manual_review_required"
      ],
      "properties": {
        "document_id": {
          "type": "integer",
          "minimum": 1,
          "description": "Unique document identifier"
        },
        "document_type": {
          "type": "string",
          "enum": [
            "rg_front",
            "rg_back",
            "cpf",
            "proof_residence",
            "medical_report",
            "insurance_card",
            "employment_proof",
            "other"
          ],
          "description": "Type of document approved"
        },
        "approved_by": {
          "type": "string",
          "pattern": "^(admin_[a-f0-9]{8}|system_auto)$",
          "description": "Hashed admin ID or system auto-approval"
        },
        "time_to_approval_hours": {
          "type": "number",
          "minimum": 0,
          "maximum": 720,
          "description": "Time from upload to approval in hours (max 30 days)"
        },
        "manual_review_required": {
          "type": "boolean",
          "description": "Whether manual review was required for approval"
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "schema_version",
    "event",
    "timestamp",
    "user_id",
    "platform",
    "properties",
    "context"
  ]
}