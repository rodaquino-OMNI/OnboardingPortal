{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "auth.email_verified",
  "title": "Authentication Email Verified Event Schema",
  "description": "Schema for tracking when users verify their email addresses",
  "allOf": [
    {
      "$ref": "base-event.schema.json"
    }
  ],
  "properties": {
    "event": {
      "const": "auth.email_verified"
    },
    "user_id": {
      "type": "string",
      "pattern": "^hash_[a-f0-9]{64}$",
      "description": "Required for email verification events"
    },
    "properties": {
      "type": "object",
      "required": [
        "verification_method",
        "time_since_registration_seconds"
      ],
      "properties": {
        "verification_method": {
          "type": "string",
          "enum": [
            "email_link",
            "email_code",
            "sms_code",
            "admin_verification",
            "automatic"
          ],
          "description": "Method used to verify the email"
        },
        "time_since_registration_seconds": {
          "type": "integer",
          "minimum": 0,
          "maximum": 604800,
          "description": "Time elapsed since registration in seconds (max 7 days)"
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "schema_version",
    "event",
    "timestamp",
    "user_id",
    "platform",
    "properties",
    "context"
  ]
}