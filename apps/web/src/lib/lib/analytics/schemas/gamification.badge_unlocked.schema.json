{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "gamification.badge_unlocked",
  "title": "Gamification Badge Unlocked Event Schema",
  "description": "Schema for tracking when users unlock badges in the gamification system",
  "allOf": [
    {
      "$ref": "base-event.schema.json"
    }
  ],
  "properties": {
    "event": {
      "const": "gamification.badge_unlocked"
    },
    "user_id": {
      "type": "string",
      "pattern": "^hash_[a-f0-9]{64}$",
      "description": "Required for gamification events"
    },
    "properties": {
      "type": "object",
      "required": [
        "badge_id",
        "badge_name",
        "badge_category",
        "badge_rarity",
        "points_awarded"
      ],
      "properties": {
        "badge_id": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9_]*[a-z0-9]$",
          "minLength": 2,
          "maxLength": 50,
          "description": "Unique identifier for the badge"
        },
        "badge_name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "description": "Human-readable name of the badge"
        },
        "badge_category": {
          "type": "string",
          "enum": [
            "onboarding_completion",
            "health_thoroughness",
            "document_excellence",
            "engagement_consistency",
            "speed_achievements",
            "milestone_reached",
            "special_events",
            "community_participation"
          ],
          "description": "Category of the badge"
        },
        "badge_rarity": {
          "type": "string",
          "enum": ["common", "uncommon", "rare", "epic", "legendary"],
          "description": "Rarity level of the badge"
        },
        "points_awarded": {
          "type": "integer",
          "minimum": 0,
          "maximum": 5000,
          "description": "Points awarded for unlocking this badge"
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "schema_version",
    "event",
    "timestamp",
    "user_id",
    "platform",
    "properties",
    "context"
  ]
}