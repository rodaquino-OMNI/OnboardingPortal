{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://omni-portal.example.com/schemas/analytics/health/questionnaire_started.json",
  "title": "Health Questionnaire Started Event",
  "description": "Analytics event for health questionnaire session initiation (ADR-004 compliant, no PHI)",
  "type": "object",
  "required": [
    "event_name",
    "timestamp",
    "user_hash",
    "session_id",
    "version"
  ],
  "properties": {
    "event_name": {
      "const": "health.questionnaire_started",
      "description": "Event identifier"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the event"
    },
    "user_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA-256 hash of user_id for de-identified tracking"
    },
    "session_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique session identifier (not user-identifying)"
    },
    "version": {
      "type": "integer",
      "minimum": 1,
      "description": "Questionnaire schema version number"
    },
    "total_steps": {
      "type": "integer",
      "minimum": 1,
      "description": "Total number of steps in the questionnaire"
    },
    "device_type": {
      "type": "string",
      "enum": ["mobile", "tablet", "desktop"],
      "description": "Device category (non-identifying)"
    },
    "referrer_type": {
      "type": "string",
      "enum": ["dashboard", "email", "direct", "external"],
      "description": "Entry point category (no URLs)"
    },
    "feature_flags": {
      "type": "object",
      "description": "Active feature flags for this session",
      "additionalProperties": {
        "type": "boolean"
      }
    }
  },
  "additionalProperties": false
}
